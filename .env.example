# Home Assistant Konfiguration
# URL zu Ihrer Home Assistant Instanz
HA_URL=https://your-homeassistant-instance.example.com
# Long-Lived Access Token aus Home Assistant
# Kann unter http://your-hass-instance:8123/profile erstellt werden
HA_TOKEN=your_long_lived_access_token_here

# Logging Konfiguration
# Mögliche Werte: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# MCP (Model Context Protocol) Einstellungen
# MCP-Server aktivieren/deaktivieren
MCP_ENABLED=True
# Port für den MCP-Server
MCP_PORT=3000

# Test-Einstellungen
# Separate Test-Instanz von Home Assistant (optional)
TEST_HA_URL=http://localhost:8124
TEST_HA_TOKEN=your_test_token_here
# Mock-Modus für Tests aktivieren
TEST_MOCK_ENABLED=True 